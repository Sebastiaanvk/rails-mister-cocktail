<p id="notice"><%= notice %></p>

<div class='container'>
<div class= 'text-center'>
<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<div>
<% if @cocktail.photo.present?  %>
    <%= cl_image_tag@cocktail.photo, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= cl_image_tag('yzpeln0kuwoprg6dlobi') %>
<% end %>
</div>



<p>
  <%= link_to 'Edit', edit_cocktail_path(@cocktail) %> | <%= link_to 'Destroy', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'All my cocktails', cocktails_path %>
</p>

<div>
<ul style="list-style-type: none;">
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to 'destroy', dose_path(dose), method: :delete %>
  </li>
<% end %>
</ul>


<h2>Add a dose</h2>
<%= render 'doses/form' %>



</div>

</div>
